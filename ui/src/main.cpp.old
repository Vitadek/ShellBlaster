  auto menu = Menu(&ssh_connections, &selected_ssh, option);

  auto document =
    vbox({
      hbox({
        filler(),
        text("This should be the Title?"),
        filler(),
        //menu,
      }),
    });

  Render(screen, document);
  screen.Loop();
  getchar();
  return 0;
}
